{{#liquid-spacer}}
<form class="form-inline clearfix">
  {{#each items as |item index|}}
    <div class="edit-item clearfix">

      <div class="form-group col-sm-12">
        <label for="bz-{{index}}" class="col-sm-2">备 注</label>
        <div class="col-sm-10">
          {{input type="text" class="form-control w100p" id=(concat 'bz-' index) placeholder="填写备注内容" value=item.desc}}
        </div>
      </div>
      <div class="form-group col-sm-12">
        <div class="btn-group col-sm-offset-2 col-sm-5 col-xs-5 fl pr0">
          <button type="button" class="btn btn-default" {{action "delItem" item}}>删除</button>
          <button type="button" class="btn {{if (is-eq item.type 'in') 'btn-info' 'btn-danger'}}" {{action "toggleType" item}}>{{if (is-eq item.type "in") "收入" "支出"}}</button>
        </div>
        <div class="col-sm-5 col-xs-7 fr">
          {{input type="number" class="form-control w100p fr" id=(concat 'money-' index) placeholder="金额，单位（元）" value=item.money}}
        </div>
      </div>
    </div>
  {{/each}}
  <div class="form-group col-sm-12">
    <button class="btn btn-default edit-btn col-sm-offset-1 col-sm-4" type="button" name="button" {{action "addOne"}}>新增一条</button>
    <button class="btn btn-default edit-btn col-sm-offset-2 col-sm-4" type="button" name="button" {{action "submit"}}>提 交</button>
  </div>
</form>
{{/liquid-spacer}}
