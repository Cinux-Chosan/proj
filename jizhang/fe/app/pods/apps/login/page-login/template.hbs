<form class="form-horizontal login-form">
  <div class="form-group">
    <label for="inputAccount" class="col-sm-4 control-label">用户名：</label>
    <div class="col-sm-8">
      {{input type="text" class="form-control" id="inputAccount" placeholder="Account" value=userInfo.account}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-4 control-label">密码：</label>
    <div class="col-sm-8">
      {{input type="password" class="form-control" id="inputPassword" placeholder="Password" value=userInfo.pwd}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <div class="checkbox">
        <label>
          {{input type="checkbox" checked=isRememberPwdChecked}} 记住密码
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <button type="submit" class="btn btn-default" disabled={{login.isRunning}} {{action (perform login)}}>{{if login.isIdle '登 陆' '提交中..'}}</button>
    </div>
  </div>
</form>
